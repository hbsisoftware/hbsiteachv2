@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>
    <div>
        <div class="input_line">
            <label class="leftlabel"> 姓名:</label><input class="easyui-textbox" id="name" style="width:175px" />
            <label class="leftlabel"> 工作单位:</label><input class="easyui-textbox" id="danwei" style="width:175px" />
        </div>
        <div class="input_line">
            <label class="leftlabel"> 职称:</label><input id="PJTD_add_PJTeacher" />
            <label class="leftlabel"> 学历:</label><input id="xueli" />
        </div>
        <div class="input_line">
            <label class="leftlabel"> 兼职类型:</label><input id="zhicheng" />
            <label class="leftlabel"> 出生日期：</label><input class="easyui-datebox" id="riqi" style="width:175px">
        </div>
        <div class="input_line">
            <label class="leftlabel">性别:</label><select id="sex" class="easyui-combobox" style="width:175px">
                <option>男</option>
                <option>女</option>
            </select>
            <label class="leftlabel"> 历年评价：</label><input class="easyui-textbox" id="pingjia" style="width:175px">
        </div>
        <div class="input_line">
            <label class="leftlabel"> 入职时间：</label><input class="easyui-datebox" id="time" style="width:175px">


            <label class="leftlabel"> 联系电话:</label><input id="tel" class="easyui-textbox" style="width:175px">
        </div>
        <div class="input_line">
            <label class="leftlabel"> 校内联系人:</label><input id="lianxi" class="easyui-textbox" style="width:175px">

            <label class="leftlabel"> 最后任课：</label><input class="easyui-datebox" id="renke" style="width:175px">
        </div>
        <div class="input_line"><label class="leftlabel"> 备注:</label><input id="beizhu" class="easyui-textbox" style="width:175px"></div>


        <script>
            $(function () {



                $("#PJTD_add_PJTeacher").combobox({
                    url: "/BaseDataDics/GetDatabases?typeNO=4",
                    valueField: 'id',
                    textField: "name",
                    width: 175
                });

            });
            $(function () {
                $("#xueli").combobox({
                    url: "/BaseDataDics/GetDatabases?typeNO=1",
                    valueField: 'id',
                    textField: "name",
                    width: 175
                });

            });
            $(function () {
                $("#zhicheng").combobox({
                    url: "/BaseDataDics/GetDatabases?typeNO=3",
                    valueField: 'id',
                    textField: "name",
                    width: 175
                });

            });
        </script>
    </div>
</body>
</html>
